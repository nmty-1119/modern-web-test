{
  "extends": ["eslint:recommended"],
  "plugins": [],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 2015
  },
  "rules": {
    "no-extra-semi": "warn",
    "semi": "warn",
    "no-undef": "warn",
    "quotes": ["warn", "single"],
    "space-before-blocks": [
      "warn",
      {
        "functions": "always",
        "keywords": "always",
        "classes": "always"
      }
    ]
  }
}